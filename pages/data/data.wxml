<view class="page_container">

<view class="title">{{name}} </view>
<view class="container">
<view class='title'>Confirmed </view>
<view class='data'>{{result.confirmed}}</view>
</view>
<view class="container">
<view class='title'>Deaths </view>
<view class="data">{{result.deaths}}</view>
</view>
<view class='container'>
<view class="title">Recovered </view>
<view class="data">{{result.recovered}}</view>
</view>
<view class="container">
<view class='title'>Critical </view>
<view class='data'>{{result.critical}}</view>
</view>


<form bindsubmit="bindFormSubmit"> 
<textarea class="textarea" placeholder="Please input a country name or country code"name="textarea"/>
<button form-type="submit" class="btn">submit</button>
</form>

</view>